{
  "name": "lumos",
  "displayName": "LUMOS Language Support",
  "description": "Write once. Deploy Everywhere. Syntax highlighting, IntelliSense, and validation for LUMOS schema language.",
  "version": "0.6.0",
  "publisher": "getlumos",
  "author": {
    "name": "RECTOR",
    "email": "rector@rectorlabs.dev"
  },
  "license": "MIT OR Apache-2.0",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/getlumos/vscode-lumos"
  },
  "homepage": "https://lumos-lang.org",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "lumos",
    "solana",
    "blockchain",
    "schema",
    "borsh",
    "anchor"
  ],
  "activationEvents": [
    "onLanguage:lumos"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lumos",
        "aliases": [
          "LUMOS",
          "lumos"
        ],
        "extensions": [
          ".lumos"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lumos",
        "scopeName": "source.lumos",
        "path": "./syntaxes/lumos.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lumos",
        "path": "./snippets/lumos.json"
      }
    ],
    "configuration": {
      "title": "LUMOS",
      "properties": {
        "lumos.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable LUMOS schema validation"
        },
        "lumos.codeGeneration.autoGenerate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically generate Rust/TypeScript on save"
        },
        "lumos.format.indentSize": {
          "type": "number",
          "default": 4,
          "enum": [2, 4],
          "description": "Number of spaces for indentation (2 or 4)"
        },
        "lumos.format.sortAttributes": {
          "type": "boolean",
          "default": true,
          "description": "Sort attributes alphabetically"
        },
        "lumos.format.alignFields": {
          "type": "boolean",
          "default": true,
          "description": "Align colons in struct fields"
        },
        "lumos.lsp.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable LUMOS Language Server Protocol integration"
        },
        "lumos.lsp.path": {
          "type": "string",
          "default": "lumos-lsp",
          "description": "Path to LUMOS Language Server binary (lumos-lsp)"
        },
        "lumos.lsp.autoInstall": {
          "type": "boolean",
          "default": true,
          "description": "Automatically install LUMOS Language Server if not found"
        },
        "lumos.lsp.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces communication between VS Code and the language server (for debugging)"
        }
      }
    },
    "commands": [
      {
        "command": "lumos.generate",
        "title": "LUMOS: Generate Code",
        "category": "LUMOS"
      },
      {
        "command": "lumos.validate",
        "title": "LUMOS: Validate Schema",
        "category": "LUMOS"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^3.7.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
